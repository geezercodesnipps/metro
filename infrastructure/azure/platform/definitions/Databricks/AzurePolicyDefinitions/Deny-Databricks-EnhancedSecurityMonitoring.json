{
  "type": "Microsoft.Authorization/policyDefinitions",
  "apiVersion": "2023-04-01",
  "name": "Deny-Databricks-EnhancedSecurityMonitoring",
  "properties": {
    "displayName": "Enforce enhanced security monitoring for Databricks workspaces",
    "description": "Enforces the use of enhanced security monitoring for Databricks workspaces.",
    "policyType": "Custom",
    "mode": "Indexed",
    "metadata": {
      "version": "1.0.0",
      "category": "Databricks"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "Audit",
          "Disabled",
          "Deny"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Databricks/workspaces"
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.Databricks/workspaces/enhancedSecurityCompliance.enhancedSecurityMonitoring.value",
                "exists": false
              },
              {
                "field": "Microsoft.Databricks/workspaces/enhancedSecurityCompliance.enhancedSecurityMonitoring.value",
                "notEquals": "Enabled"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
